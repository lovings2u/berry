<div class="container">
    <div class="box col-xs-12 text-center">  
        <form id='list' action='/manage/message' method='POST'>
            <table border='1' width='100%'>
                <tr><td></td><td>구매자</td><td>구매일자</td><td>주문개수</td><td>주문금액(원)</td>
                <% @deposit.each do |x| %>
                    <tr><td><input type='checkbox' name='user[]' value='<%= x.phone_number %>' class='<%= x.order_index %>'></td><td><%= x.customer_name %></td><td><%= x.order_date %></td><td><%= x.prod_volume %>개</td><td><%= x.prod_price %>원</td></tr>
                <% end %>
            </table>
            <br><br>
        <br><br>
        <p><button type="button" class="btn btn-warning" id='read'>수신자명단 입력하기</button>
            <button type="reset" class="btn btn-info" id='reset'>초기화하기</button></p>
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">수신자명단</span>
            <input id="number_list" name="number_list" type="text" class="form-control" aria-describedby="basic-addon1">
            <input id="id_list" name="id_list" type="hidden" class="form-control">
        </div>
        <p><textarea class="form-control" style="height: 150px;"name="message_body" row="10" cols="50">메시지 내용입력</textarea>
            <p><button type="submit" class="btn btn-success">메시지 보내기</button></p>
        </form>
    </div>
</div>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script>

<!--Input Receiver -->
var list=[];
var id=[];
$('#read').click(function(){
    $('input:checked').each(function(){
        list.push($(this).val());
        id.push($(this).attr('class'));
    });

    console.log(list);
    console.log(id);
    var receiver = list.join(',');
    receiver = '"'+ receiver + '"';
    $('#number_list').val(receiver);
    $('#id_list').val(id);
})
$('#reset').click(function(){
    list=[];
    id=[];
})
<!-- /Input Receiver -->

</script>

