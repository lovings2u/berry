<!--Get Data from Popup -->
    function setChildValue(buy_id, address, detail_address, name){
        console.log(buy_id);
        console.log(address);
        console.log(detail_address);
        console.log(name);
        $('.cell_phone').val(buy_id);
        $('.address').val(address);
        $('.detail_address').val(detail_address);
